<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <ImageView
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/social_banner"/>

            <RelativeLayout
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recshape"
                    android:layout_margin="10dp"
                    android:padding="20dp">

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions? Comments? Concerns?"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#527863"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
                        android:id="@+id/txt2"
                        android:layout_below="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let our management know!"
                        android:layout_centerHorizontal="true"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/contact_txt"
                        android:layout_below="@+id/txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:paddingLeft="5dp"
                        android:hint="Write something"
                        android:background="#00000000"
                        android:maxLines="5"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#202020"
                        android:layout_below="@+id/contact_txt"
                        android:layout_marginTop="5dp" />

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/_login_btn_green"
                        android:layout_alignParentBottom="true"
                        android:text="Submit"
                        android:textColor="#fefefe"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:gravity="center"/>


                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_weight=".2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_banner_contactus"
                android:layout_gravity="center"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
    </RelativeLayout>