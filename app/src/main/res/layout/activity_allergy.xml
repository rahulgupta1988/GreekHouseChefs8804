<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">


                <ImageView
                    android:layout_weight=".2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/allergy_banner"/>

                <RelativeLayout
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/background_color">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recshape"
                        android:layout_margin="10dp">


                        <RelativeLayout
                            android:id="@+id/rr1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt1"
                            android:layout_marginTop="17dp">



                            <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Have a diagnosed food allergy or dietary restriction?\n Please let us know so we can make the necessary accommodations."
                                android:textSize="13sp"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                />


                            <ScrollView
                                android:id="@+id/alg_list1"
                                android:layout_marginTop="60dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:scrollbarFadeDuration="0"
                                android:layout_height="200dp">

                           <LinearLayout
                               android:orientation="vertical"
                               android:id="@+id/alg_list"
                               android:layout_marginLeft="10dp"
                               android:layout_marginRight="10dp"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                           </LinearLayout>

                       </ScrollView>


                            <RelativeLayout
                                android:id="@+id/lay5"
                                android:layout_below="@+id/alg_list1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">

                                <ImageView
                                    android:id="@+id/pencil"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/pencil_icon"
                                    android:layout_centerVertical="true"/>

                                <EditText
                                    android:id="@+id/allergy_txt"
                                    android:layout_toRightOf="@+id/pencil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Other"
                                    android:textSize="16sp"
                                    android:background="#00000000"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:id="@+id/add_allergy_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/allergy_nav"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:text="Add"
                                    android:gravity="center"
                                    android:background="@drawable/add_bg"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>
                            </RelativeLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#202020"
                                android:layout_below="@+id/lay5"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                        </RelativeLayout>

                        <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                            android:id="@+id/submit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/_login_btn_green"
                            android:layout_alignParentBottom="true"
                            android:text="Submit"
                            android:textColor="#fefefe"
                            android:textSize="17sp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"/>


                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/im1"
                    android:layout_weight=".2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_banner_ic"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>