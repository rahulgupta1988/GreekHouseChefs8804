<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/background_color">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recshape"
                        android:layout_margin="10dp"
                        android:padding="15dp">


                        <LinearLayout
                            android:id="@+id/dish_txt_ll"
                            android:layout_below="@+id/txt2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="1.3">

                            <LinearLayout
                                android:layout_weight="1.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/topic_name_ed_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Topic Name"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:textSize="17sp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="#202020"
                                    android:layout_below="@+id/dish_ed_txt"
                                    android:layout_marginTop="10dp" />

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/time_txt_ll"
                            android:layout_below="@+id/dish_txt_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="1.3">


                            <LinearLayout
                                android:layout_weight="1.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/topic_description_ed_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Topic Description"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:textSize="17sp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="#202020"
                                    android:layout_below="@+id/time_ed_txt"
                                    android:layout_marginTop="10dp" />

                            </LinearLayout>
                        </LinearLayout>


                        <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                            android:id="@+id/submit_topic"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/_login_btn_green"
                            android:layout_alignParentBottom="true"
                            android:text="Add"
                            android:textColor="#fefefe"
                            android:textSize="17sp"
                            android:textAllCaps="false"
                            android:gravity="center"/>


                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>
</RelativeLayout>