<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_login_bg"
    android:padding="20dp">



    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/login_logo_icon"
        android:layout_centerHorizontal="true"
        />

    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with your GHC account"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/signup_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_lay"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/username_ic"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/username_icon"
            />

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Username"
            android:textColorHint="#2C2C2C"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:inputType="textNoSuggestions"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:background="#00000000"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/user_line"
        android:layout_below="@+id/user_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_view"/>

    <LinearLayout
        android:id="@+id/pass_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_line"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/pass_ic"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/password_icon"
            />

        <EditText
            android:id="@+id/pass_edit"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Password"
            android:textColorHint="#2C2C2C"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:inputType="textPassword"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:background="#00000000"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/pass_line"
        android:layout_below="@+id/pass_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_view"/>


    <ImageView
        android:id="@+id/remeber_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/pass_line"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/request_plate_sel"
        android:layout_centerVertical="true" />

    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
        android:id="@+id/remeber_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:textSize="12sp"
        android:textColor="#2a2a2a"
        android:layout_toRightOf="@+id/remeber_check"
        android:layout_below="@+id/pass_line"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        />

    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
        android:id="@+id/forgot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="14sp"
        android:textColor="#2a2a2a"
        android:layout_below="@+id/pass_line"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        />


    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/_login_btn_green"
        android:layout_below="@+id/forgot_txt"
        android:text="Login"
        android:textColor="#fefefe"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="30dp"/>


    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/_login_btn_green"
        android:layout_below="@+id/login_btn"
        android:text="Sign Up"
        android:textColor="#fefefe"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


</RelativeLayout>