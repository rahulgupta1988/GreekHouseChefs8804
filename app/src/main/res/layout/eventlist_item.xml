<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/finallayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recshape"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:weightSum="1"
        android:background="@drawable/date_block"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_weight=".38"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                android:id="@+id/start_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:gravity="center"
                />

            <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                android:id="@+id/start_month_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:gravity="center"
                android:layout_below="@+id/start_date_txt"/>

        </RelativeLayout>

        <View
            android:layout_weight=".24"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:layout_weight=".38"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                android:id="@+id/end_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:gravity="center"
                />

            <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                android:id="@+id/end_month_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:gravity="center"
                android:layout_below="@+id/end_date_txt" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fdsfgdsfsf"
            android:layout_marginLeft="2dp"
            android:textSize="13sp"
            android:textColor="#2b2b2b"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <ImageView
            android:id="@+id/time_ic"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/time_event"
            android:layout_below="@+id/event_title"
            android:layout_centerVertical="true"/>

        <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="dsfdsfds"
            android:layout_below="@+id/event_title"
            android:layout_toRightOf="@+id/time_ic"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:textColor="#6c6c6c"/>


        <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="r incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_below="@+id/event_time"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:textColor="#6c6c6c"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/fav_circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_more_event"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    </LinearLayout>



        <LinearLayout
            android:id="@+id/secondlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recshape"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".13"
                android:layout_height="70dp"
                android:weightSum="1"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:weightSum="1"
                    android:background="@drawable/date_block_single"
                    android:layout_gravity="center|left">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center">

                        <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                            android:id="@+id/start_date_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="17sp"
                            android:gravity="center"
                            />

                        <com.sixd.greek.house.chefs.cuastomviews.TextViewBold
                            android:id="@+id/start_month_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:layout_below="@+id/start_date_txt1"/>

                    </RelativeLayout>



                </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".87"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical">
                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/event_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="2dp"
                        android:textSize="13sp"
                        android:textColor="#2b2b2b"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_marginBottom="6dp" />

                    <ImageView
                        android:id="@+id/time_ic1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/time_event"
                        android:layout_below="@+id/event_title1"
                        android:layout_centerVertical="true"/>

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
                        android:id="@+id/event_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text=""
                        android:layout_below="@+id/event_title1"
                        android:layout_toRightOf="@+id/time_ic1"
                        android:layout_marginLeft="5dp"
                        android:textSize="11sp"
                        android:textColor="#6c6c6c"/>

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
                        android:id="@+id/event_description1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lorem ipsusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                        android:layout_below="@+id/event_time1"
                        android:layout_marginLeft="5dp"
                        android:textSize="11sp"
                        android:textColor="#6c6c6c"/>

                </RelativeLayout>

            </LinearLayout>





        </LinearLayout>



    </LinearLayout>
</LinearLayout>