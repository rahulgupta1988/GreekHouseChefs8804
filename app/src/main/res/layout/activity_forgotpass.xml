<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_login_bg">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
     <ImageView
        android:id="@+id/line_menu_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/topbar_back_ic"
        android:layout_alignParentLeft="true"
         android:layout_marginLeft="5dp"/>

      <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
        android:id="@+id/header_txt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Forgot Password"
        android:layout_toRightOf="@+id/line_menu_icon"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/login_logo_icon"
        android:layout_centerHorizontal="true"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_below="@+id/login_logo"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="20dp">


     <!--       <EditText
                android:id="@+id/email_txt"
                android:layout_below="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:hint="Enter Email"
                android:maxLines="5"
                android:textSize="16sp"
                android:inputType="textEmailAddress"/>
-->

            <LinearLayout
                android:id="@+id/user_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/signup_lay"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/username_ic"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user_email"
                    />

                <EditText
                    android:id="@+id/email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="Enter Email"
                    android:textColorHint="#2C2C2C"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/user_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/user_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_view"/>

            <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/_login_btn_green"
                android:layout_alignParentBottom="true"
                android:text="Submit"
                android:textColor="#fefefe"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:gravity="center"/>


        </RelativeLayout>


    </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>