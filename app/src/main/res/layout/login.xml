<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/student_login_bg"
    android:orientation="vertical"
    >


    <ScrollView
        android:id="@+id/regScroll"
        android:isScrollContainer="false"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:text="FBM\n Distribution"
                        android:gravity="center"
                        android:textSize="40dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/background_img_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/login_logo_icon" />
                </LinearLayout>


                <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
                    android:id="@+id/login_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sign in with your GHC account"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/login_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">



                    <RelativeLayout
                        android:id="@+id/signup_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/user_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/signup_lay"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/username_ic"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/username_icon"
                            />

                        <EditText
                            android:id="@+id/username_edit"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:hint="Username"
                            android:textColorHint="#2C2C2C"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:inputType="textNoSuggestions"
                            android:fontFamily="monospace"
                            android:gravity="center_vertical"
                            android:background="#00000000"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/user_line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/user_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_view"/>

                    <LinearLayout
                        android:id="@+id/pass_lay"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_line"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/pass_ic"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/password_icon"
                            />

                        <EditText
                            android:id="@+id/pass_edit"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:hint="Password"
                            android:textColorHint="#2C2C2C"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:inputType="textPassword"
                            android:fontFamily="monospace"
                            android:gravity="center_vertical"
                            android:background="#00000000"
                            />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/pass_line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/pass_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_view"/>


                    <ImageView
                        android:id="@+id/remeber_check"
                        android:layout_width="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/pass_line"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/request_plate_sel_new"
                        android:layout_centerVertical="true" />

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/remeber_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember Me"
                        android:textSize="15sp"
                        android:textColor="#2a2a2a"
                        android:layout_toRightOf="@+id/remeber_check"
                        android:layout_below="@+id/pass_line"
                        android:layout_marginTop="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        />

                    <com.sixd.greek.house.chefs.cuastomviews.TextViewRegular
                        android:id="@+id/forgot_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:textColor="#2a2a2a"
                        android:layout_below="@+id/pass_line"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_centerVertical="true"
                        />


                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/_login_btn_green"
                        android:layout_below="@+id/forgot_txt"
                        android:text="Login"
                        android:textColor="#fefefe"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_marginTop="30dp"/>


                    <com.sixd.greek.house.chefs.cuastomviews.TextViewSemiBold
                        android:id="@+id/signup_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/_login_btn_green"
                        android:layout_below="@+id/login_btn"
                        android:text="Sign Up"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#fefefe"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
